<!-- web description -->
<meta name="description" content="Sitio web dedicado a la venta de articulos para tu primer hogar">
<!-- /web description -->

<!-- Favicon -->
	<link rel = "icon" href="../images/white-logo.jpg" type = "image/x-icon"> 
<!-- Favicon -->


</head>

<body class="page_background_color">

<!-- Navbar -->
  <%- include('parcials/header.ejs',{'user':user}) %>
<!-- /Navbar -->








<!-- Main image -->


<div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
    <!-- Overlay -->
    <div class="overlay"></div>
  
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#bs-carousel" data-slide-to="1"></li>
      <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>
    
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
     
     <!-- Bedrom main image -->
        <div class="item slides active">
        <div class="slide-1"></div>
        <div class="hero">
          <hgroup>
              <h2>Dormitorios</h2> 
         </hgroup>
      <a href="/products/categories/2" class="categoriesHref">
          <button class="btn btn-hero btn-lg" role="button">Ver más </button>
      </a>
        </div>
      </div>
     <!-- Bedrom main image -->


     <!-- Interior main image -->
      <div class="item slides">
        <div class="slide-2"></div>
        <div class="hero">        
          <hgroup>
              <h2>Interiores</h2>        
              <h3>Disfruta de renovar el interior de tu hogar con nuestros nuevos articuloss</h3>
          </hgroup>      
      <a href="/products/categories/4" class="categoriesHref">
          <button class="btn btn-hero btn-lg" role="button">Ver más </button>
      </a>
        </div>
      </div>
     <!-- Interior main image -->


<!-- Accesories main image -->
      <div class="item slides">
        <div class="slide-3"></div>
        <div class="hero">        
          <hgroup>
              <h1>Accesorios</h1>        
              <p>Nueva linea de accesorios para decorar tu hogar</p>
          </hgroup>
      <a href="/products/categories/1">
          <button class="btn btn-hero btn-lg" role="button">Ver más </button>
      </a>
        </div>
      </div>
<!-- Accesories main image -->


    </div> 
  </div>






<!-- .Main image -->

    <main  class="page_background_color">


<!--  Products -->
        <section class="section_products">
            <h3 class="section_tittle text-center">Productos</h3>
            <div class="flex_property_config">
            <% for (const product of products) {%> 
                <%- include('parcials/product.ejs',{'product':product}) %>      
            <%} %> 
        </div>
        </section>

<!--  /Products -->


<!--  Decorated products -->

        <section class="section_products">
            <h3 class="section_tittle text-center">Ambientes Decorados</h3>
            <div class="flex_property_config">
                <% for (const scene of scenes) {%> 
                    <%- include('parcials/scene.ejs',{'scene':scene}) %>      
                <%} %> 
        </div>            
        </section>
<!--  /Decorated products -->
      
<!--Categories title  -->
<h3 class="text-center mb-2" id="TitleCategory"> Categorias </h3>

<!--/Categories title  -->
 

<section class="menu_container">
            <div class="menu_option_container d-flex justify-content-center">
               <a href="/products/categories/1 "target="_blank" class="categoriesHref">
                <i class="fas fa-coffee green_font "></i>
                <p  class="menu_option_name">Accesorios</p>
            </a>
            </div>
            <div class="menu_option_container d-flex justify-content-center" >
               <a href="/products/categories/2 "target="_blank" class="categoriesHref">
                <i class="fas fa-bed green_font"></i>
                <p class="menu_option_name" style>Dormitorios</p>
               </a>
            </div>
            <div class="menu_option_container d-flex justify-content-center" >
               <a href="/products/categories/3 "target="_blank" class="categoriesHref">
                <i class="fas fa-umbrella-beach green_font"></i>
                <p class="menu_option_name">Exteriores</p>
                </a>
            </div>
            <div class="menu_option_container d-flex justify-content-center">
               <a href="/products/categories/4 "target="_blank" class="categoriesHref">
                <i class="fas fa-couch green_font"></i>
                <p class="menu_option_name">Interiores</p>
               </a>
            </div>
            <div class="menu_option_container d-flex justify-content-center">
               <a href="/products/categories/5 "target="_blank" class="categoriesHref">

                <i class="fas fa-bath green_font"></i>
                <p class="menu_option_name">Baño</p>
            </div>
            <div class="menu_option_container d-flex justify-content-center">
                <a href="/products/categories/6 "target="_blank" class="categoriesHref">
                <i class="fas fa-chair green_font "></i>
                <p class="menu_option_name">Living</p>
                </a>
            </div>
            <div class="menu_option_container d-flex justify-content-center">
                <a href="/products/categories/7 "target="_blank" class="categoriesHref">
                <i class="fas fa-desktop green_font"></i>
                <p class="menu_option_name">Oficina</p>
                </a>
            </div>
            <div class="menu_option_container d-flex justify-content-center">
               <a href="/products/categories/8 "target="_blank" class="categoriesHref">
                <i class="fas fa-tags green_font"></i>
                <p class="menu_option_name">Ofertas</p>
               </a>
            </div>
        </section>
    </main>
    <%- include('parcials/footer.ejs') %>

